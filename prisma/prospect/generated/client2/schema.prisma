generator client {
  provider      = "prisma-client-js"
  output        = "./generated/client2"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PROSPECT")
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String   @db.VarChar(500)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  User      User     @relation(fields: [userId], references: [id])
}

model User {
  id                  Int       @id @default(autoincrement())
  email               String    @unique
  firstname           String?
  lastname            String?
  password            String?
  avatar              String?
  phone               String?
  prospectionStatusId Int?      @default(1)
  companyId           Int?      @unique
  Company             Company?  @relation(fields: [companyId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  Message             Message[]
}

model ProspectionStatus {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Address   Address?
  User      User?
}

model Address {
  id        Int      @id @default(autoincrement())
  label     String   @db.VarChar(250)
  street    String   @db.VarChar(250)
  city      String   @db.VarChar(250)
  zip       String   @db.VarChar(250)
  country   String   @db.VarChar(250)
  lat       Decimal? @db.Decimal
  long      Decimal? @db.Decimal
  companyId Int      @unique
  Company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
